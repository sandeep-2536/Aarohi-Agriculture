<h2>All Discussions</h2>
<a href="/features/community/new">+ New Discussion</a>

<ul>
  <% posts.forEach(post => { %>
    <li>
      <% if (post.image) { %>
        <img src="<%= post.image %>" alt="Post Image" style="max-width:150px; border-radius:10px;">
      <% } %>
      <a href="/features/community/posts/<%= post._id %>"><%= post.title %></a>
      <small>by <%= post.author %> on <%= post.date.toDateString() %></small>
    </li>
  <% }) %>
</ul>
